    "es6-shim": "^0.35.2",
    "grommet": "^1.1.0",
    "prop-types": "^15.5.8",
    "react": "^16.1.0",
    "react-collapse": "^4.0.2",
    "react-dom": "^16.1.0",
    "react-height": "^3.0.0",
    "react-intl": "^2.2.3",
    "react-motion": "^0.5.0",
    "react-redux": "^5.0.5",
    "react-router": "^3.0.0",
    "react-scroll-collapse": "^0.2.0",
    "reactivexcomponent.js": "^3.1.8",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.2",
    "redux-saga": "^0.15.3",
